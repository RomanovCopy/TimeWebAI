<Page x:Class="TimeWebAI.Pages.WebViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:controls="clr-namespace:TimeWebAI.AppControls"
      xmlns:interfaces="clr-namespace:TimeWebAI.Interfaces"
      xmlns:markup="clr-namespace:TimeWebAI.Markup"
      xmlns:local="clr-namespace:TimeWebAI.Pages"
      mc:Ignorable="d" 
      d:DataContext="{x:Type interfaces:IWebViewPageViewModel}">
    <Page.DataContext>
        <markup:ResolveViewModel ViewModelType="{x:Type interfaces:IWebViewPageViewModel}"/>
    </Page.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl Grid.Row="0" Content="{markup:ResolveUserControl UserControlType={x:Type controls:TitleBarWebViewControl}}"/>
        <ContentControl Grid.Row="1" Content="{markup:ResolveUserControl UserControlType={x:Type controls:WebViewControl}}"/>
    </Grid>
</Page>
