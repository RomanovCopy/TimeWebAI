<Application x:Class="TimeWebAI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TimeWebAI">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <SolidColorBrush x:Key="CurrentWindowBackground" Color="Gray" />
            <SolidColorBrush x:Key="CurrentWindowForeground" Color="Black" />
            <SolidColorBrush x:Key="CurrentTitleBarBackground" Color="Gray" />
            <SolidColorBrush x:Key="CurrentTitleBarForeground" Color="Black" />
            <SolidColorBrush x:Key="CurrentBorderColor" Color="Black" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
