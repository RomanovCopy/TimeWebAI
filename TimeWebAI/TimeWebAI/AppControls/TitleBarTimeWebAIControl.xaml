<UserControl x:Class="TimeWebAI.AppControls.TitleBarTimeWebAIControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:interfaces="clr-namespace:TimeWebAI.Interfaces"
             xmlns:markup="clr-namespace:TimeWebAI.Markup"
             xmlns:local="clr-namespace:TimeWebAI.AppControls"
             mc:Ignorable="d" 
             d:DataContext="{x:Type interfaces:ITitleBarTimeWebAIControlViewModel}">
    <UserControl.DataContext>
        <markup:ResolveViewModel ViewModelType="{x:Type interfaces:ITitleBarTimeWebAIControlViewModel}"/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style TargetType="Popup">
            <Setter Property="AllowsTransparency" Value="True"/>
            <Setter Property="PopupAnimation" Value="Slide"/>
            <Setter Property="StaysOpen" Value="False"/>
        </Style>
        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsAgent}" Value="True">
                    <Setter Property="Content" Value="Delete Agent"/>
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsAgent}" Value="False">
                    <Setter Property="Content" Value="New Agent"/>
                    <Setter Property="Foreground" Value="Black"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Command="{Binding NewAgent, UpdateSourceTrigger=PropertyChanged}"
                        HorizontalAlignment="Stretch"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
